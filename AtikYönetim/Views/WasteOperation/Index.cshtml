@using AtikYonetim.Models.ViewModel;

@model AtikYonetim.Models.ViewModel.WasteOperationVM

@{
    ViewData["Title"] = "Index";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>




<div class="btn-group  btn-group-sm" role="group" aria-label="Basic example">
    <button id="update" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalView">Yeni Operasyon Ekle</button>
</div>


@using (Html.BeginForm("Save", "WasteOperation", FormMethod.Get, new { wasteOperationVM = Model }))
{

    <div class="modal fade" id="modalView" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Atık İşlemleri</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group" name="new">
                        <div class="input-group col-12">

                            <div class="input-group col-6">
                                <label class="input-group-text" for="Month">Ay</label>
                                @Html.DropDownListFor(m=> m.Month, new SelectList(ViewBag.Month,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>
                            <div class="input-group col-6">

                                <label class="input-group-text" for="Store">Mağaza</label>
                                @Html.DropDownListFor(m=> m.Store, new SelectList(ViewBag.Store,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>

                        </div>

                        <br />

                        <div class="input-group col-12">
                            <div class="input-group col-6">

                                <label class="input-group-text" for="WasteType">Atık Tipi</label>
                                @Html.DropDownListFor(m=> m.WasteType, new SelectList(ViewBag.WasteType,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>

                            <div class="input-group col-6">

                                <label class="input-group-text" for="WasteSort">Atık Çeşiti</label>
                                @Html.DropDownListFor(m=> m.WasteSort, new SelectList(ViewBag.WasteSort,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>
                        </div>

                        <br />

                        <div class="input-group col-12">
                            <div class="input-group col-6">

                                <label class="input-group-text" for="Quantity">Miktar</label>
                                @Html.TextBoxFor(m=> m.Quantity, new { @class = "form-control", @type = "number", @min ="0" })
                            </div>

                            <div class="input-group col-6">
                                <label class="input-group-text" for="Unit">Birim</label>
                                @Html.DropDownListFor(m=> m.Unit, new SelectList(ViewBag.Unit,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>
                        </div>

                        <br />

                        <div class="input-group col-12">
                            <div class="input-group col-6">
                                <label class="input-group-text" for="Company">Firma</label>
                                @Html.DropDownListFor(m=> m.ReceivingCompany, new SelectList(ViewBag.Company,"Value","Text"), "Seçiniz", new { @class = "form-select" })
                            </div>

                            <div class="input-group col-6">
                                <label class="input-group-text" for="WasteDate">Tarih</label>
                                @Html.TextBoxFor(m=> m.WasteDate, new { @id="WasteDate", @class = "form-control", @type = "date"})
                            </div>
                        </div>

                        <br />

                        <div class="input-group col-12">
                            <div class="input-group col-12">
                                <label class="input-group-text" for="Content">İçerik</label>
                                @Html.TextAreaFor(m=> m.Content, new { @id="Content", @class = "form-control", @type = "text"})
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="sumbit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



